<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.dadacoalition.yedit.yamlsource"
            default-charset="UTF-8"
            id="org.springframework.ide.eclipse.concourse.pipeline.yml"
            name="Concourse Pipeline"
            priority="high">
      </content-type>
      <file-association
            content-type="org.springframework.ide.eclipse.concourse.pipeline.yml"
            file-names="pipeline.yml">
      </file-association>
   </extension>
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Concourse Pipeline Editor"
            icon="icons/concourse_icon.png"
            class="org.springframework.ide.eclipse.concourse.pipeline.editor.PipelineYamlEditor"
            id="org.springframework.ide.eclipse.concourse.pipeline.editor.PipelineYamlEditor">
            <contentTypeBinding
               contentTypeId="org.springframework.ide.eclipse.concourse.pipeline.yml"
            /> 
            <contentTypeBinding
               contentTypeId="org.dadacoalition.yedit.yamlsource"
            />
      </editor>
   </extension>
   
</plugin>
